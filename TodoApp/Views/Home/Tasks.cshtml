@using TodoApp.Models
@model List<TodoTask>
@{
    ViewData["Title"] = "Tasks";
}

@if (Model.Count != 0)
{
    <table class="table">
        <tr><td>Id</td><td>Задача</td><td>Завершена?</td></tr>
        @foreach (TodoTask task in Model)
        {
            <tr>
                <td>@task.Id</td>
                <td>@task.TaskName</td>
                <td><input class="form-check-input text-center" disabled type="checkbox" checked="@task.IsCompleted" /></td>
            </tr>
        }
    </table>
}
else
{
    <div class="mb-3">У вас нет задач.</div>


}

<a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Add">
    Добавить задачу
</a>
